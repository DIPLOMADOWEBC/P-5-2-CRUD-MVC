@model IEnumerable<MVC_CRUD_DiplomadoUASDCodeFirst.Web.Models.Empleado>

<h2>Lista de Empleados</h2>

<div class="row">
    <div class="col-sm-2">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        @*
            <a class="btn btn-success" style="margin-bottom:10px" href="/Estudiantes/Create">
                Create New
            </a>
        *@
    </div>
</div>
<div class="col-sm-10">
    <input class="form-control" id="input_search" name="search" type="text" placeholder="busqueda..." />
</div>

<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sueldo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha_Nacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departamento.Descripcion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="table_body">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sueldo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_Nacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamento.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EmpleadoID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EmpleadoID }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EmpleadoID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@*Realizar la busquedad del lado del cliente*@
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#input_search").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#table_body tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
